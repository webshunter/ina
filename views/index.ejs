<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HUBUNK - AI Bisnis Coach untuk UMKM</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/scrollreveal"></script>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="navbar-brand">HUBUNK</a>
            <div class="nav-links">
                <a href="#konsultasi">Konsultasi</a>
                <a href="#pricing">Pricing</a>
                <a href="#about">Tentang Kami</a>
                <a href="#faq">FAQ</a>
            </div>
        </div>
    </nav>

    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1><%= content.hero?.title || 'AI Bisnis Coach untuk UMKM Anda' %></h1>
                <p><%= content.hero?.description || 'Dapatkan solusi bisnis yang tepat dengan konsultasi AI di sini.' %></p>
                <a href="#konsultasi" class="btn btn-primary">Coba Konsultasi Gratis</a>
            </div>
            <div class="hero-image">
                <img src="/images/ai-coach.png" alt="AI Business Coach">
            </div>
        </div>
    </section>

    <section id="konsultasi" class="konsultasi">
        <div class="container">
            <h2 class="section-title">Konsultasi</h2>
            <div class="konsultasi-grid">
                <div class="konsultasi-card">
                    <h3>
                        <span class="icon">ðŸ’¬</span>
                        Konsultasi Gratis
                    </h3>
                    <p>Coba konsultasi AI secara gratis untuk topik bisnis tertentu.</p>
                    <a href="#" class="btn btn-outline">Mulai Chat</a>
                </div>
                <div class="konsultasi-card">
                    <h3>
                        <span class="icon">ðŸŽ¥</span>
                        Konsultasi Berbayar
                    </h3>
                    <p>Dapatkan analisis mendalam dan sesi langsung bersama AI.</p>
                    <a href="#" class="btn btn-primary">Lihat Detail</a>
                </div>
            </div>
        </div>
    </section>

    <section id="pricing" class="pricing">
        <div class="container">
            <h2 class="section-title">Pricing</h2>
            <div class="pricing-grid">
                <% pricing.forEach(plan => { %>
                    <div class="pricing-card">
                        <h3><%= plan.plan_name %></h3>
                        <p><%= plan.description %></p>
                        <div class="price">Rp <%= plan.price.toLocaleString('id-ID') %>/bulan</div>
                        <div class="features">
                            <% JSON.parse(plan.features).forEach(feature => { %>
                                <div class="feature">
                                    <i class="fas fa-check"></i>
                                    <%= feature %>
                                </div>
                            <% }); %>
                        </div>
                        <a href="#" class="btn btn-primary">Pilih</a>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <section id="about" class="about">
        <div class="container">
            <h2 class="section-title">Tentang Kami</h2>
            <p><%= content.about?.description || 'Kami adalah platform konsultasi bisnis untuk membantu UMKM meraih kesuksesan melalui teknologi AI.' %></p>
        </div>
    </section>

    <section id="faq" class="faq">
        <div class="container">
            <h2 class="section-title">FAQ</h2>
            <% faqs.forEach(faq => { %>
                <div class="faq-item">
                    <h3><%= faq.question %> <span>â€º</span></h3>
                    <div class="faq-answer"><%= faq.answer %></div>
                </div>
            <% }); %>
        </div>
    </section>

    <script>
        // Initialize ScrollReveal
        ScrollReveal().reveal('.hero-content', { delay: 200 });
        ScrollReveal().reveal('.hero-image', { delay: 400 });
        ScrollReveal().reveal('.konsultasi-card', { interval: 200 });
        ScrollReveal().reveal('.pricing-card', { interval: 200 });
        ScrollReveal().reveal('.faq-item', { interval: 100 });

        // FAQ Toggle
        document.querySelectorAll('.faq-item').forEach(item => {
            item.addEventListener('click', () => {
                item.classList.toggle('active');
            });
        });
    </script>
</body>
</html> 